generator client {
  provider = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id
  username String @unique
}

model Employees {
  id         String     @id
  username   String     @unique
  name       String
  surname    String
  email      String?
  role       String
  phone      String?
  address    String
  img        String?
  bloodType  String
  sex        UserSex
  birthday   DateTime?
  createdAt  DateTime   @default(now())
  managerId  String
  management Management @relation(fields: [managerId], references: [id])
  teams      Team[]     @relation("TeamEmployees")
  projects   Projects[] @relation("ProjectEmployees")
  events     Events[]   @relation("EventEmployees")
}

model Management {
  id        String      @id
  username  String      @unique
  name      String
  surname   String
  email     String?
  phone     String?
  address   String
  img       String?
  bloodType String
  sex       UserSex
  birthday  DateTime?
  createdAt DateTime    @default(now())
  employees Employees[]
  projects  Projects[]
  teams     Team[]      @relation("TeamManagement")
}

model Team {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  management Management[] @relation("TeamManagement")
  employees  Employees[]  @relation("TeamEmployees")
}

model Projects {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  management Management[]
  employees  Employees[]  @relation("ProjectEmployees")
  deadLine   DateTime
}

model Events {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime
  employees   Employees[] @relation("EventEmployees")
  employeeId  Int?
}

model Leaves {
  id        Int      @id @default(autoincrement())
  leaveType String
  days      Int
  startDate DateTime
  endDate   DateTime
}



model Announcements {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
}

enum UserSex {
  MALE
  FEMALE
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}
